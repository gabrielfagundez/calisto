<div class="container">
  <h1>Pending Reviews</h1>

  <table class="table table-striped">
    <% @current_page.changes.each do |change| %>
        <tr>
          <td><%= change[:description] %></td>
          <td><%= change[:project] %></td>
          <td><%= change[:owner] %></td>
          <td><%= distance_of_time_in_words(change[:last_updated], Time.now) %></td>
        </tr>
    <% end %>
  </table>
</div>
